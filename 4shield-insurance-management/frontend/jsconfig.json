{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"], // Alias `@` trỏ đến `src/`
			"@components/*": ["components/*"],
			"@styles/*": ["styles/*"],
			"@pages/*": ["pages/*"],
			"@layouts/*": ["layouts/*"],
			"@utils/*": ["utils/*"],
			"@contexts/*": ["contexts/*"],
			"@assets/*": ["assets/*"],
			"@common/*": ["common/*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
